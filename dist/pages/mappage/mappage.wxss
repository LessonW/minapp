.container {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx; }
  .container .btn-list {
    width: 100%;
    display: inline-block;
    overflow: hidden;
    position: relative;
    margin-top: 30rpx; }
    .container .btn-list .btn-getLoction {
      width: 100%;
      display: inline-block;
      line-height: 60rpx;
      font-size: 30rpx;
      position: relative;
