.module-list {
  margin-top: 30rpx;
  display: inline-block;
  padding: 30rpx;
  box-sizing: border-box;
  width: 100%; }
  .module-list .module-item {
    width: 100%;
    display: inline-block;
    line-height: 60rpx;
    font-size: 30rpx;
    position: relative;
