.navBar-box {
  width: 100%;
  height: 80rpx;
  white-space: nowrap;
  box-sizing: border-box;
  padding: 0 15rpx;
  border-bottom: 1rpx solid #ccc; }
  .navBar-box .cate-item {
    display: inline-block;
