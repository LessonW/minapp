.title {
  font-size: 40rpx; }

.video-wrap {
  width: 100%;
  height: 0;
  padding: 0;
  padding-top: 56.25%;
  display: inline-block;
  background: #35495e;
  position: relative; }
  .video-wrap .video-item {
    width: 100%;
    height: 100%;
    display: inline-block;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1; }
  .video-wrap .video-poster {
    width: 100%;
    height: 100%;
    display: inline-block;
    position: absolute;
    left: 0;
    top: 0;
    overflow: hidden;
    z-index: 111; }
    .video-wrap .video-poster .poster-img {
      display: inline-block;
      width: 100%;
      height: 100%; }
    .video-wrap .video-poster .play-video {
      width: 100rpx;
      height: 100rpx;
      display: inline-block;
      position: absolute;
      left: 50%;
      top: 50%;
      z-index: 111;
      border-radius: 50%;
      margin: -50rpx 0 0 -50rpx; }
