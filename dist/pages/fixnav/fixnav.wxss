.container {
  display: inline-block;
  width: 100%;
  font-size: 0;
  height: 100%;
  background-color: #f5f5f5; }
  .container .navbar {
    display: inline-block;
    width: 100%;
    overflow: hidden;
    background-color: #fff; }
    .container .navbar .list {
      width: 100%;
      box-sizing: border-box;
      padding: 0 10rpx;
      border-bottom: 2rpx solid #f4f4f4; }
      .container .navbar .list .item {
        font-size: 30rpx;
        display: inline-block;
        width: 16.666667%;
        line-height: 80rpx;
        text-align: center;
        position: relative; }
        .container .navbar .list .item.active:after {
          width: 60%;
          position: absolute;
          bottom: 3rpx;
          left: 20%;
          content: '';
          height: 4rpx;
          background: #f00; }
  .container .pop-nav {
    width: 100%;
    height: 80rpx;
    white-space: nowrap;
    box-sizing: border-box;
    padding: 0 15rpx;
    border-bottom: 1rpx solid #ccc;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #fff;
    transform: translate(0, -100%);
    transition: all 1.2s ease-in-out 0;
    -webkit-transition: all 0.25s ease-in-out 0.01s; }
    .container .pop-nav.show {
      transform: translate(0, 0);
      -webkit-transform: translate(0, 0); }
    .container .pop-nav .pop-item {
      display: inline-block;
      font-size: 32rpx;
      padding: 0 5rpx;
      margin: 0 15rpx;
      line-height: 80rpx;
      position: relative; }
      .container .pop-nav .pop-item.active:after {
        width: 100%;
        position: absolute;
        bottom: 3rpx;
        left: 0;
        content: '';
        height: 4rpx;
        background: #f00; }
  .container .content {
    width: 100%;
    height: 3000rpx;
    display: inline-block;
    box-sizing: border-box; }
