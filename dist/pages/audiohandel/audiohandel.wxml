<view class="container" wx:if="{{audioList && audioList.length}}">
    <audio src="{{ activeIndex > -1 ? audioList[activeIndex].src : ''}}" id="myAudio" bindtimeupdate="audioTimeUpdated"></audio>
    <div class="audio-wrap" wx:for="{{audioList}}" wx:key="{{index}}">
        <div class="audio-load">
            <div class="btn">
                <image wx:if="{{item.audioStatus != 1}}" class="btn-tag" mode="widthFix" src="../../images/tag-play.png" bindtap="playAudio" data-src="{{item.src}}" data-idx="{{index}}"></image>
                <image wx:else class="btn-tag" mode="widthFix" src="../../images/tag-stop.png" bindtap="pauseAudio" data-src="{{item.src}}" data-idx="{{index}}"></image>
            </div>         
            <div class="line">
                <slider bindchange="sliderChange" value="{{item.curTime}}" block-size="14" block-color="#f89828" backgroundColor="#ccc" data-idx="{{index}}" max="{{item.sliderMax}}" activeColor="#f89828" step="1"/>
            </div>
            <div class="time">{{item.playTime}}</div>
        </div>
    </div>
</view>